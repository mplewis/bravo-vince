.container {
  display: flex
  flex-direction: column
  align-items: center
  text-align: left
  font-size: 36px
}

.pre {
  margin-top: 0
  margin-bottom: 0
  border: none
  background-color: transparent !important
}

.code {
  font-family: 'Fira Code', 'Inconsolata', 'Anonymous Pro', 'DejaVu Sans Mono', 'Menlo', 'Monaco', 'Consolas', monospace
  font-weight: 500
  background-color: transparent !important
  margin: 0
  padding: 0
}
